<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Use fx:root so the control class can be the root when loader.setRoot(this) -->
<fx:root type="HBox" xmlns:fx="http://javafx.com/fxml" spacing="8" styleClass="form-item">
    <Label fx:id="lbl" text="Label" prefWidth="140"/>
    <VBox spacing="4" prefWidth="360">
        <TextField fx:id="input" />
        <Label fx:id="error" text="" visible="false" styleClass="form-error"/>
    </VBox>
</fx:root>
