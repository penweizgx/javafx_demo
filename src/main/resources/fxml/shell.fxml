<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>

<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.app.controller.ShellController">
    <BorderPane styleClass="app-shell">
        <top>
            <HBox spacing="8" styleClass="top-bar" alignment="CENTER_LEFT">
                <HBox spacing="8" styleClass="nav-menu">
                    <Button fx:id="btnHome" text="首页"/>
                    <Button fx:id="btnForm" text="表单"/>
                    <Button fx:id="btnList" text="列表"/>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox spacing="8" styleClass="action-menu">
                    <Button fx:id="btnBack" text="返回"/>
                    <Button fx:id="btnTheme" text="切换主题"/>
                </HBox>
            </HBox>
        </top>
        <center>
            <TabPane fx:id="tabPane" prefWidth="1000" prefHeight="640" />
        </center>
    </BorderPane>
</StackPane>
