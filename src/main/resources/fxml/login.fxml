<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="login-container" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.controller.LoginController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label text="Login" styleClass="title-label">
        <font>
            <Font size="24.0" />
        </font>
    </Label>

    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Username" />
        <TextField fx:id="usernameField" promptText="Enter your username" />
    </VBox>

    <VBox spacing="10.0" maxWidth="300.0">
        <Label text="Password" />
        <PasswordField fx:id="passwordField" promptText="Enter your password" />
    </VBox>
    
    <Label fx:id="errorLabel" textFill="RED" wrapText="true" visible="false"/>

    <Button fx:id="loginButton" defaultButton="true" mnemonicParsing="false" onAction="#onLogin" text="Login" prefWidth="300.0" styleClass="primary-button"/>
    
</VBox>
